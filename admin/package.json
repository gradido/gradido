    "regenerator-runtime": "^0.13.9",
    "unplugin-icons": "^0.19.0",
    "unplugin-vue-components": "^0.27.3",
    "vite": "^5.4.14",
    "vite-plugin-commonjs": "^0.10.1",
    "vue": "3.5.13",
    "vue-apollo": "3.1.2",
    "vue-i18n": "9.13.1",
