{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "lint": {
    },
    "lint:fix": {
    },
    "test": {
    },
    "typecheck": {
    },
    "dev": {
      "dependsOn": ["config#build"],
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"],
      "cache": true
    },
    "start": {
      "dependsOn": ["build"],
      "persistent": true,
      "cache": false
    }
  }
}