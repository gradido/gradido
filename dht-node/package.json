    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/node": "^18.11.18",
    "apollo-server-express": "2.25.2",
    "class-validator": "^0.13.2",
    "cross-env": "^7.0.3",
    "decimal.js-light": "^2.5.1",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "graphql": "15.5.1",
    "i18n": "0.15.1",
    "jsonwebtoken": "^8.5.1",
    "lodash.clonedeep": "^4.5.0",
    "log4js": "^6.7.1",
    "nodemon": "^2.0.20",
