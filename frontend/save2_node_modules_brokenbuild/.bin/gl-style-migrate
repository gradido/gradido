#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@maplibre/maplibre-gl-style-spec/dist/gl-style-migrate.mjs" "$@"
else
  exec node  "$basedir/../@maplibre/maplibre-gl-style-spec/dist/gl-style-migrate.mjs" "$@"
fi
