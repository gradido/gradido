#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../@maplibre/maplibre-gl-style-spec/dist/gl-style-validate.mjs" "$@"
  ret=$?
else 
  node  "$basedir/../@maplibre/maplibre-gl-style-spec/dist/gl-style-validate.mjs" "$@"
  ret=$?
fi
exit $ret
